{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "msvc-build",
      "type": "cppbuild",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/std:c++20",
        "${file}",
        "/Fe${fileDirname}\\Build\\Debug\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\Build\\Debug\\${fileBasenameNoExtension}.exe",
        "${file}",
        "/std:c++20",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}